{% include 'header.html.twig' %}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ profile.name }} ({{ profile.ticker }})</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col">
                <h1>{{ profile.name }} ({{ profile.ticker }})</h1>
                <h2 class="{{ quote.current >= quote.previousClose ? 'text-success' : 'text-danger' }}">
                    ${{ quote.current|number_format(2) }}
                    <small>({{ ((quote.current - quote.previousClose)/quote.previousClose * 100)|number_format(2) }}%)</small>
                </h2>
            </div>
        </div>

        <!-- Profile Data -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Company Profile</div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Country</dt>
                            <dd class="col-sm-8">{{ profile.country }}</dd>
                            
                            <dt class="col-sm-4">IPO Date</dt>
                            <dd class="col-sm-8">{{ profile.ipo }}</dd>
                            
                            <dt class="col-sm-4">Market Cap</dt>
                            <dd class="col-sm-8">${{ profile.marketCap|number_format }}</dd>
                            
                            <dt class="col-sm-4">Industry</dt>
                            <dd class="col-sm-8">{{ profile.industry }}</dd>
                            
                            <dt class="col-sm-4">Website</dt>
                            <dd class="col-sm-8"><a href="{{ profile.website }}" target="_blank">{{ profile.website }}</a></dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Quote Data -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Price Data</div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">High</dt>
                            <dd class="col-sm-8">${{ quote.high|number_format(2) }}</dd>
                            
                            <dt class="col-sm-4">Low</dt>
                            <dd class="col-sm-8">${{ quote.low|number_format(2) }}</dd>
                            
                            <dt class="col-sm-4">Open</dt>
                            <dd class="col-sm-8">${{ quote.open|number_format(2) }}</dd>
                            
                            <dt class="col-sm-4">Previous Close</dt>
                            <dd class="col-sm-8">${{ quote.previousClose|number_format(2) }}</dd>
                            
                            <dt class="col-sm-4">Last Updated</dt>
                            <dd class="col-sm-8">{{ quote.timestamp }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
 
        <!-- Analyst Trends -->
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header">Analyst Recommendations</div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Period</th>
                                    <th>Strong Buy</th>
                                    <th>Buy</th>
                                    <th>Hold</th>
                                    <th>Sell</th>
                                    <th>Strong Sell</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for trend in trends %}
                                <tr>
                                    <td>{{ trend.period }}</td>
                                    <td>{{ trend.strongBuy }}</td>
                                    <td>{{ trend.buy }}</td>
                                    <td>{{ trend.hold }}</td>
                                    <td>{{ trend.sell }}</td>
                                    <td>{{ trend.strongSell }}</td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6">No analyst data available</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Financials -->
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header">Balance Sheet</div>
                    <div class="card-body">
                        <div class="row">
                            {% for item in financials %}
                            <div class="col-md-4 mb-2">
                                <strong>{{ item.label }}:</strong> ${{ item.value|number_format }}
                            </div>
                            {% else %}
                            <div class="col">
                                No financial data available
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- News -->
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">Latest News</div>
                    <div class="card-body">
                        <div class="list-group">
                            {% for item in news %}
                            <a href="{{ item.url }}" class="list-group-item list-group-item-action" target="_blank">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">{{ item.headline }}</h5>
                                    <small>{{ item.source }}</small>
                                </div>
                            </a>
                            {% else %}
                            <div class="list-group-item">
                                No recent news articles
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
{% include 'footer.html.twig' %}