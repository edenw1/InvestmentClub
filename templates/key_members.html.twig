{% include 'header.html.twig' %}
{% if user.is_admin %}
    <a href="key-members-edit">Edit Key Members</a> |
{% endif %}
<section class="members-list">
    <h2>Meet Our Key Members</h2>
    <ul>
        {% for member in members %}
            <li>
                <h3>{{ member.name }}</h3>
                <p>Role: {{ member.position }}</p>
                <p>{{ member.description }}</p>
                {% if member.photo_path %}
                    <img src="{{ member.photo_path }}" alt="{{ member.name }}'s photo">
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</section>
{% include 'footer.html.twig' %}