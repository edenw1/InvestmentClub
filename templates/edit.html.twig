{% include 'header.html.twig' %}

<div>
    <div>
        <h1>Edit About Page</h1>

        <div>
            <form action="editAbout.php" method="POST">
                <div>
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" value="{{content.title}}">
                </div>
                <div>
                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="5">{{ content.description }}</textarea>
                </div>
                <div>
                    <label for="url">URL</label>
                    <input type="text" id="url" name="url" value="{{content.url}}">
                </div>

                <div>
                    <label for="type">Content Type</label>
                    <select id="type" name="type">
                        <option value="photo" {% if content.type == 'photo' %}selected{% endif %}>Photo</option>
                        <option value="video" {% if content.type == 'video' %}selected{% endif %}>Video</option>
                        <option value="text" {% if content.type == 'text' %}selected{% endif %}>Text</option>
                    </select>
                </div>
                <button type="submit">Save Content</button>
            </form>
            <br>
            <br>
        {% if user.is_admin %}
        <a href="about">Back to About Page</a> 
        {% endif %}
        
        </div>
    </div>
</div>

{% include 'footer.html.twig' %}
