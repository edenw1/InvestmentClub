{% include 'header.html.twig' %}

<div class="login-container">
    <div class="login-form-container">
        <h2 class="login-header">{% block header %}User Login{% endblock %}</h2>
        
        <form action="doform.php" method="POST" class="login-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required class="input-field">
            </div>
            
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required class="input-field">
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" class="submit-btn">
            </div>
        </form>

        <div class="guest-login">
            <form action="inde2x.php" method="post">
                <input type="submit" value="Continue as Guest" class="guest-btn">
            </form>
        </div>

