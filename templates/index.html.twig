<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Stock Website{% endblock %}</title>
    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="homePageStyles.css">
</head>
<body>
    <div class="sidebar">
        <img src="Inv_Logo.png" alt="Investment Club Logo">
    </div>
    <div class="content">
        <header>
            <h1>{% block header %}Investment Club{% endblock %}</h1>
        </header>

	<nav>
 		<a href="controller.php?action=home">Home</a>
 		<a href="controller.php?action=about">About</a>
    
 	{% if not user.is_authenticated %}
	        <a href="controller.php?action=login">Login</a>
        {% else %}
                <a href="controller.php?action=transactions">Transactions</a>
                <a href="controller.php?action=presentations">Presentations</a>

        {% if user.is_admin %}
             <a href="controller.php?action=admin">Admin Panel</a>
        {% endif %}
             <a href="controller.php?action=logout">Logout</a>
        {% endif %}
	</nav>

        <div class="container">
            <h2>{% block subheader %}Welcome, Investment Club!{% endblock %}</h2>

            {% if stocks %}
            <div class="stock-grid">
                {% for stock in stocks %}
                    <a href="/controller.php?action=stock&symbol={{ stock.symbol }}" class="stock-card-link">
                        <div class="stock-card">
                            <div class="stock-header">
                                <h3>{{ stock.symbol }}</h3>
                                <p class="company-name">{{ stock.profile.companyName }}</p>
                            </div>
                            <div class="stock-body">
                                <div class="stock-info">
                                    <p>Current Price: ${{ stock.quote.c|number_format(2) }}</p>
                                    <p>Timestamp: {{ stock.quote.t|date('Y-m-d H:i:s') }}</p>
                                    <p>Previous Close: ${{ stock.quote.pc|number_format(2) }}</p>
                                    <p>Day's Range: ${{ stock.quote.l|number_format(2) }} - ${{ stock.quote.h|number_format(2) }}</p>
                                    <p class="{{ stock.quote.c >= stock.quote.pc ? 'positive' : 'negative' }}">
                                        Change: ${{ (stock.quote.c - stock.quote.pc)|number_format(2) }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <p class="no-stocks">No stocks found in the portfolio.</p>
        {% endif %}
    </div>
        <footer>
            <p>{% block footer %}Muskingum University 2025 Stock Tracker{% endblock %}</p>
        </footer>
    </div>
</body>
</html>