<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Stock Website{% endblock %}</title>
    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="homePageStyles.css">
</head>
<body>
    <div class="sidebar">
        <img src="Inv_Logo.png" alt="Investment Club Logo">
    </div>
    <div class="content">
        <header>
            <h1>{% block header %}Investment Club{% endblock %}</h1>
        </header>
        <nav>
            <a href="index.php?action=home">Home</a>
            <a href="index.php?action=transactions">Transaction</a>
            <a href="index.php?action=about">About</a>
            <a href="index.php?action=presentations">Presentations</a>
        </nav>
        <div class="container">
            <h2>{% block subheader %}Welcome, Investment Club!{% endblock %}</h2>

            {% if not user.is_authenticated %}
                <form action="index.php?action=login" method="post">
                    <input type="submit" value="Login">
                </form>
            {% else %}
                <form action="index.php?action=transactions" method="post">
                    <input type="submit" value="See Transactions">
                </form>
                <form action="index.php?action=presentations" method="post">
                    <input type="submit" value="Presentations">
                </form>
                {% if user.is_admin %}
                    <form action="index.php?action=admin" method="post">
                        <input type="submit" value="Admin Panel">
                    </form>
                {% endif %}
                <form action="index.php?action=logout" method="post">
                    <input type="submit" value="Logout">
                </form>
            {% endif %}

            <div class="stock-card">
                {% block content1 %}{% endblock %}
            </div>
            <div class="stock-card">
                {% block content2 %}{% endblock %}
            </div>
            <div class="stock-card">
                {% block content3 %}{% endblock %}
            </div>
        </div>
        <footer>
            <p>{% block footer %}&copy; 2025 Stock Tracker. All rights reserved.{% endblock %}</p>
        </footer>
    </div>
</body>
</html>
